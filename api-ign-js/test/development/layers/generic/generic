export const generic_002 = new Generic({
  // ids: '1,2',
  // cql: "nombre LIKE '%ada%'",
  // version: '1.2.0',
  // extract: true,
  // opacity: 0.5,
  // extract: true,
  // infoEventType: 'hover',
}, {
  visibility: false,
  minZoom: 5,
  maxZoom: 7,
  opacity: 0.5,
  style: new Polygon({
    fill: {
      color: 'red',
    },
  }),
}, new VectorLayer({
  source: new VectorSource({
    format: new GeoJSON(),
    url: 'https://geostematicos-sigc.juntadeandalucia.es/geoserver/tematicos/ows?service=WFS&version=1.0.0&request=GetFeature&typeName=tematicos:Provincias&maxFeatures=50&outputFormat=application%2Fjson',
    strategy: bboxStrategy,
  }),
}));
